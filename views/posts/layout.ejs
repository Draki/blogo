	<section>
<% var flash = flash() %>
<% if (flash.info) { %>
<article id='flashinfo'>
<h3>Información de interés:</h3>
<ul> <% for (var i in flash.info) { %>
<li> <%= flash.info[i] %> </li>
<% } %> </ul> </article>
<% } %>
<% if (flash.success) { %>
<article id='flashsuccess'>
<h3>Tareas completadas con éxito:</h3>
<ul> <% for (var i in flash.success) { %>
<li> <%= flash.success[i] %> </li>
<% } %> </ul> </article>
<% } %>
<% if (flash.error) { %>
<article id='flasherror'>
<h3>Errores encontrados:</h3>
<ul> <% for (var i in flash.error) { %>
<li> <%= flash.error[i] %> </li>
<% } %> </ul> </article>
<% } %>
</section>
